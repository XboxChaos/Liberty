<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="Liberty.Controls.Settings.appSettings" 
             mc:Ignorable="d" 
             Width="615" Height="320">
    <Grid>
    	<Rectangle Fill="#FFBFBFC0" HorizontalAlignment="Left" Margin="163,35,0,35" Stroke="#FFBFBFC0" Width="0.5"/>
            
		<Label x:Name="btnUpdateSettings" MouseEnter="btnUpdateSettings_MouseEnter" MouseLeave="btnUpdateSettings_MouseLeave" MouseDown="btnUpdateSettings_MouseDown" Content="UPDATE SETTINGS" FontWeight="Bold" FontSize="8" Margin="46,56,460,0" Height="23" VerticalAlignment="Top" Foreground="#FF000000" />
		<Label x:Name="btnLaunchSettings" MouseEnter="btnLaunchSettings_MouseEnter" MouseLeave="btnLaunchSettings_MouseLeave" MouseDown="btnLaunchSettings_MouseDown" Content="LAUNCH SETTINGS" FontWeight="Bold" FontSize="8" Margin="46,74,460,0" Height="23" VerticalAlignment="Top" Foreground="#FF000000" />
		<Label x:Name="btnTaglistSettings" MouseEnter="btnTaglistSettings_MouseEnter" MouseLeave="btnTaglistSettings_MouseLeave" MouseDown="btnTaglistSettings_MouseDown" Content="TAGLIST SETTINGS" FontWeight="Bold" FontSize="8" Margin="46,92,460,0" Height="23" VerticalAlignment="Top" Foreground="#FF000000" />
    
	
		<StackPanel x:Name="updateSettings" Margin="183,40,-18,40">
			<Label x:Name="UPSheader" Content="Change the settings of the Updater" FontSize="18" FontWeight="SemiBold" Foreground="#FF373A3D"/>
			<Label x:Name="UPSsubheader" Content="Change default settings about the updater, and update procedure." FontSize="11" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="0,-10,0,0"/>
			
			<Label x:Name="UPSprt1Header" Content="Basic updater settings;" FontSize="11.5" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="0,10,0,0"/>
			<CheckBox x:Name="UPScheckOLHeader" Content="Check for updates on application launch." FontSize="10" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="10,2,0,0"/>
			<CheckBox x:Name="UPSshowChangeLog" Content="Show change log when Liberty checks for updates." FontSize="10" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="10,5,0,0"/>
		</StackPanel>
		
		<StackPanel x:Name="launchSettings" Margin="183,40,-18,40">
			<Label x:Name="LNSheader" Content="Change launch settings of Liberty" FontSize="18" FontWeight="SemiBold" Foreground="#FF373A3D"/>
			<Label x:Name="LNSsubheader" Content="Change the default setting of what liberty initalizes on launch." FontSize="11" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="0,-10,0,0"/>
			
			<Label x:Name="LNSprt1Header" Content="Pre-Runtime Settings;" FontSize="11.5" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="0,10,0,0"/>
			
			<CheckBox x:Name="LNSdisplaySplash" Content="Display Splash Screen." FontSize="10" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="10,2,0,0"/>
			<Slider x:Name="LNSsplashTime" FontSize="10" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="10,6,0,0" HorizontalAlignment="Left" Width="110" Minimum="1" SmallChange="1" Value="5" ValueChanged="LNSsplashTime_ValueChanged"/>
			<Label x:Name="LNSsplashTimelbl" Content="Display Splash for: {0}" FontSize="11.5" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="120,-25,0,0"/>
			
			<Label x:Name="LNSprt2Header" Content="Post-Runtime Settings;" FontSize="11.5" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="0,15,0,0"/>
			<CheckBox x:Name="LNScheckDLL" Content="Check for missing DLL's." FontSize="10" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="10,5,0,0"/>
			
			<CheckBox x:Name="LNSenableEggs" Content="Enable Easter Eggs." FontSize="10" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="10,5,0,0"/>
			
			<CheckBox x:Name="LNSausFileType" Content="Associate all files with no extension to open with Liberty." FontSize="10" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="10,5,0,0"/>
		</StackPanel>
		
		<StackPanel x:Name="taglistSettings" Margin="183,40,-18,40" Visibility="Visible" d:IsHidden="True">
			<Label x:Name="TLTheader" Content="Change Taglist Settings" FontSize="18" FontWeight="SemiBold" Foreground="#FF373A3D"/>
			<Label x:Name="TLTsubheader" Content="Change options on Updating/Viewing/Reading Taglists." FontSize="11" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="0,-10,0,0"/>
			
			<Label x:Name="TLTprt1Header" Content="Basic Taglist Options;" FontSize="11.5" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="0,10,0,0"/>
			<CheckBox x:Name="TLTdlLatestTaglst" Content="Download taglist from the internet if you are connected." FontSize="10" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="10,2,0,0"/>
			<CheckBox x:Name="TLTtaglstNoMem" Content="Save taglist to temporary directory, not read from memory. " FontSize="10" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="10,5,0,0"/>
			
			<Label x:Name="TLTprt2Header" Content="External taglist reading;" FontSize="11.5" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="0,10,0,0"/>
			<CheckBox x:Name="TLTExtAscTaglst" Content="Import taglists from Ascension" FontSize="10" FontWeight="SemiBold" Foreground="#FF373A3D" Margin="10,2,0,0"/>
			
			<TextBox IsReadOnly="True" Background="White" Name="TLTAsvTagLstDirec" Margin="10,5,150,0"/>
			<Image x:Name="btnFind" Height="21" Margin="310,-24,0,-1" HorizontalAlignment="Left" Stretch="Fill" Width="71" Source="/Liberty;component/Images/SecondaryButton.png" IsMouseDirectlyOverChanged="btnFind_IsMouseDirectlyOverChanged" MouseDown="btnFind_MouseDown" MouseUp="btnFind_MouseUp" />
			<TextBlock Height="19" HorizontalAlignment="Left" Margin="310,-22,0,-1" x:Name="lblFind" Text="FIND" Width="71" Foreground="#FF373A3D" IsMouseDirectlyOverChanged="btnFind_IsMouseDirectlyOverChanged" MouseDown="btnFind_MouseDown" MouseUp="btnFind_MouseUp" FontFamily="Segoe WP Semibold" FontWeight="Bold" TextAlignment="Center" />
		</StackPanel>
		
		
    	<ed:RegularPolygon Name="triUpd" Fill="#FF000000" HorizontalAlignment="Left" Height="2.387" InnerRadius="1" Margin="43,65,0,0" PointCount="3" Stretch="Fill" Stroke="Black" VerticalAlignment="Top" Width="4.957" RenderTransformOrigin="0.5,0.5">
    		<ed:RegularPolygon.RenderTransform>
    			<TransformGroup>
    				<ScaleTransform/>
    				<SkewTransform/>
    				<RotateTransform Angle="90"/>
    				<TranslateTransform/>
    			</TransformGroup>
    		</ed:RegularPolygon.RenderTransform>
    	</ed:RegularPolygon>
    	<ed:RegularPolygon x:Name="triLaunch" Fill="#FF000000" HorizontalAlignment="Left" Height="2.387" InnerRadius="1" Margin="43,83.682,0,0" PointCount="3" Stretch="Fill" Stroke="Black" VerticalAlignment="Top" Width="4.957" RenderTransformOrigin="0.5,0.5">
    		<ed:RegularPolygon.RenderTransform>
    			<TransformGroup>
    				<ScaleTransform/>
    				<SkewTransform/>
    				<RotateTransform Angle="90"/>
    				<TranslateTransform/>
    			</TransformGroup>
    		</ed:RegularPolygon.RenderTransform>
    	</ed:RegularPolygon>
    	<ed:RegularPolygon x:Name="triTaglist" Fill="#FF000000" HorizontalAlignment="Left" Height="2.387" InnerRadius="1" Margin="43,101.649,0,0" PointCount="3" Stretch="Fill" Stroke="Black" VerticalAlignment="Top" Width="4.957" RenderTransformOrigin="0.5,0.5">
    		<ed:RegularPolygon.RenderTransform>
    			<TransformGroup>
    				<ScaleTransform/>
    				<SkewTransform/>
    				<RotateTransform Angle="90"/>
    				<TranslateTransform/>
    			</TransformGroup>
    		</ed:RegularPolygon.RenderTransform>
    	</ed:RegularPolygon>
	</Grid>
</UserControl>
