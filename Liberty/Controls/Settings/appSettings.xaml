<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="Liberty.Controls.Settings.appSettings" 
             mc:Ignorable="d" 
             Width="615" Height="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="98*"/>
            <RowDefinition Height="222*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFBFBFC0" HorizontalAlignment="Left" Margin="163,35,0,35" Stroke="#FFBFBFC0" Width="1" Grid.RowSpan="2"/>

        <Label x:Name="btnUpdateSettings" MouseEnter="btnUpdateSettings_MouseEnter" MouseLeave="btnUpdateSettings_MouseLeave" MouseDown="btnUpdateSettings_MouseDown" Content="UPDATE SETTINGS" FontWeight="Bold" FontSize="8" Margin="46,56,460,0" Height="23" VerticalAlignment="Top" Foreground="{DynamicResource AccentTextDark}" />
        <Label x:Name="btnLaunchSettings" MouseEnter="btnLaunchSettings_MouseEnter" MouseLeave="btnLaunchSettings_MouseLeave" MouseDown="btnLaunchSettings_MouseDown" Content="LAUNCH SETTINGS" FontWeight="Bold" FontSize="8" Margin="46,74,460,0" Height="23" VerticalAlignment="Top" Foreground="{DynamicResource AccentTextDark}" />
        <Label x:Name="btnTaglistSettings" MouseEnter="btnTaglistSettings_MouseEnter" MouseLeave="btnTaglistSettings_MouseLeave" MouseDown="btnTaglistSettings_MouseDown" Content="TAGLIST SETTINGS" FontWeight="Bold" FontSize="8" Margin="46,92,460,0" Height="23" VerticalAlignment="Top" Foreground="{DynamicResource AccentTextDark}" Grid.RowSpan="2" />
        <Label x:Name="btnAppAbout" MouseEnter="btnAppAbout_MouseEnter" MouseLeave="btnAppAbout_MouseLeave" MouseDown="btnAppAbout_MouseDown" Content="ABOUT THIS BUILD" FontWeight="Bold" FontSize="8" Margin="46,12.167,460,0" Height="23" VerticalAlignment="Top" Foreground="{DynamicResource AccentTextDark}" Grid.Row="1" />


        <StackPanel x:Name="updateSettings" Margin="183,40,-18,40" d:IsHidden="True" Grid.RowSpan="2">
			<Label x:Name="UPSheader" Content="Change the settings of the Updater" FontSize="18" Foreground="{DynamicResource AccentTextDark}" FontWeight="SemiBold" Height="34"/>
            <Label x:Name="UPSsubheader" Content="Change default settings about the updater, and update procedure." Foreground="{DynamicResource AccentTextDark}" FontSize="11" FontWeight="SemiBold" Margin="0,-10,0,0" Height="25"/>
			
			<Label x:Name="UPSprt1Header" Content="Basic updater settings;" FontSize="11.5" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Margin="0,10,0,0" Height="25"/>
			<CheckBox x:Name="UPScheckOLHeader" Content="Check for updates on application launch." Margin="10,2,0,0" Height="16" />
			<CheckBox x:Name="UPSshowChangeLog" Content="Show change log when Liberty checks for updates." Margin="10,5,0,0" />
		</StackPanel>
		
		<StackPanel x:Name="launchSettings" Margin="183,40,-18,40" d:IsHidden="True" Grid.RowSpan="2">
			<Label x:Name="LNSheader" Content="Change launch settings of Liberty" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Height="34"/>
			<Label x:Name="LNSsubheader" Content="Change Liberty's splash screen and runtime settings." FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Margin="0,-10,0,0" Height="25"/>
			
			<Label x:Name="LNSprt1Header" Content="Splash settings;" FontSize="11.5" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Margin="0,10,0,0" Height="25"/>
			
			<CheckBox x:Name="LNSdisplaySplash" Content="Display Splash Screen." Margin="10,2,0,0" Height="16" />
			<Slider x:Name="LNSsplashTime" FontSize="10" FontWeight="SemiBold" Margin="10,6,0,0" HorizontalAlignment="Left" Width="110" Minimum="1" SmallChange="1" Value="5" ValueChanged="LNSsplashTime_ValueChanged"/>
			<Label x:Name="LNSsplashTimelbl" Content="Display Splash for: {0}" FontSize="11.5" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Margin="120,-24,0,0" Height="25"/>
			
			<Label x:Name="LNSprt2Header" Content="Post-runtime settings;" FontSize="11.5" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Margin="0,15,0,0" Height="25"/>
			
			<CheckBox x:Name="LNSenableEggs" Content="Enable easter eggs." Margin="10,5,0,0" Height="16" />
			<CheckBox x:Name="LNSnoWarnings" Content="Don't show warning dialogs for unsafe actions." Margin="10,5,0,0" />
		</StackPanel>
		
		<StackPanel x:Name="taglistSettings" Margin="183,40,-18,40" Grid.RowSpan="2" d:IsHidden="True">
			<Label x:Name="TLTheader" Content="Change Taglist settings" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Height="34"/>
			<Label x:Name="TLTsubheader" Content="Change options on Updating/Viewing/Reading Taglists." FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Margin="0,-10,0,0" Height="25"/>
			
			<Label x:Name="TLTprt1Header" Content="Basic taglist options;" FontSize="11.5" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Margin="0,10,0,0" Height="25"/>
			<CheckBox x:Name="TLTdlLatestTaglst" Content="Download taglist from the internet if you are connected." Margin="10,2,0,0" Height="16"/>
			<CheckBox x:Name="TLTtaglstNoMem" Content="Save taglist to temporary directory, not read from memory. " Margin="10,5,0,0" Visibility="Collapsed"/>
			<CheckBox x:Name="TLTtaglstUseTypes" Content="Attempt to &quot;guess&quot; unknown object names." Margin="10,5,0,0" Height="16"/>
			
			<Label x:Name="TLTprt2Header" Content="External taglist reading;" FontSize="11.5" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Margin="0,10,0,0" Height="25"/>
			<CheckBox x:Name="TLTExtAscTaglst" Content="Import taglists from Ascension" Margin="10,2,0,0" Checked="TLTExtAscTaglst_Checked" Unchecked="TLTExtAscTaglst_Unchecked" Height="16" />
			
			<TextBox Name="TLTAsvTagLstDirec" Margin="10,9,150,0" Height="22"/>

            <Button x:Name="btnfindTaglist" Content="Find" Style="{DynamicResource MetroPrimaryButton}" Width="71" Margin="310,-28,0,0" HorizontalAlignment="Left" Click="btnfindTaglist_Click"/>
        </StackPanel>

        <StackPanel x:Name="appAbout" Margin="183,40,-18,40" Visibility="Visible" Grid.RowSpan="2">
            <Label x:Name="AAheader" Content="About This Build" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Height="34"/>
            <Label x:Name="AAsubheader" Content="Information about this build and external dependencies" FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource AccentTextDark}" Margin="0,-10,0,0" Height="25"/>
            <TextBlock x:Name="appBuildData"  FontSize="11.0" FontWeight="Thin" Foreground="{DynamicResource AccentTextDark}" Margin="5,0,0,0"><Run Text="Build Version: {0}"/><LineBreak/><Run Text="Build Date: {1}"/></TextBlock>
            <TabControl Height="154" Margin="0,8,48,0" Style="{DynamicResource MetroTabControl}">
            	<TabItem Header="CHANGELOG" Style="{DynamicResource MetroTabItem}">
            		<Grid>
            			<ScrollViewer Height="126" VerticalAlignment="Top">
            				<TextBlock   FontSize="10.5" FontWeight="Thin" Foreground="{DynamicResource AccentTextDark}" ScrollViewer.VerticalScrollBarVisibility="Disabled"  ScrollViewer.CanContentScroll="True" Margin="5,0,0,0"><Run Text="-Major Release(3.0.0.0)"/><LineBreak/><Run Text=" -Added"/><LineBreak/><Run Text="  -Halo: CE Anniversary save editing"/><LineBreak/><Run Text="  -[CEA] Invincibility"/><LineBreak/><Run Text="  -[CEA] Ammo and grenades editing"/><LineBreak/><Run Text="  -[CEA] Biped position editing"/><LineBreak/><Run Text="  -[Reach] Carry and edit up to four weapons"/><LineBreak/><Run Text="  -[Reach] Weapon name guessing in the object editor"/><LineBreak/><Run Text="  -[Reach] View an object's rotation info"/><LineBreak/><Run Text="  -[Reach] Scaling objects"/><LineBreak/><Run Text="  -[Reach] Edit object max health and shields"/><LineBreak/><Run Text="  -Intermediate step while the package is being updated"/><LineBreak/><Run Text="  -Gamertag is now shown in the removable device save selector"/><LineBreak/><Run Text="  -GUI color schemes"/><LineBreak/><Run Text="  -Setting to hide warning dialogs for unsafe actions"/><LineBreak/><Run Text=" -Fixed"/><LineBreak/><Run Text="  -Object moving should hopefully work better now"/><LineBreak/><Run Text="  -Buggy mass move dialog"/><LineBreak/><Run Text="  -Internal improvements"/><LineBreak/><Run Text="  -Fixed lots and lots of bugs (yeah, loads)"/><LineBreak/><Run Text=" -Changed"/><LineBreak/><Run Text="  -[Reach] Completely redesigned object editor"/><LineBreak/><Run Text="  -New, cleaner metro controls"/></TextBlock>
            			</ScrollViewer>
            		</Grid>
            	</TabItem>
            	<TabItem Header="DEPENDENCIES" Style="{DynamicResource MetroTabItem}">
            		<Grid RenderTransformOrigin="0.502,0.705" Margin="0">
            			<ScrollViewer Height="126" VerticalAlignment="Top">
            				<TextBlock x:Name="appExternal"   FontSize="10.5" FontWeight="Thin" Foreground="{DynamicResource AccentTextDark}" ScrollViewer.VerticalScrollBarVisibility="Disabled"  ScrollViewer.CanContentScroll="True" Margin="5,0,0,0"><Run Text="Dependency Name: {0}"/><LineBreak/><Run Text="Dependency Author: {1}"/><LineBreak/><Run Text="Dependency Size: {2}"/><LineBreak/><Run Text="Dependency License: {3}"/><LineBreak/><LineBreak/><LineBreak/></TextBlock>
            			</ScrollViewer>
            		</Grid>
            	</TabItem>
            </TabControl>

        </StackPanel>

        <ed:RegularPolygon Name="triUpd" Fill="#FF000000" HorizontalAlignment="Left" Height="2" InnerRadius="1" Margin="43,65,0,0" PointCount="3" Stretch="Fill" Stroke="{DynamicResource AccentTextDark}" VerticalAlignment="Top" Width="5" RenderTransformOrigin="0.5,0.5">
    		<ed:RegularPolygon.RenderTransform>
    			<TransformGroup>
    				<ScaleTransform/>
    				<SkewTransform/>
    				<RotateTransform Angle="90"/>
    				<TranslateTransform/>
    			</TransformGroup>
    		</ed:RegularPolygon.RenderTransform>
    	</ed:RegularPolygon>
        <ed:RegularPolygon x:Name="triLaunch" Fill="{DynamicResource AccentTextDark}" HorizontalAlignment="Left" Height="2" InnerRadius="1" Margin="43,84,0,0" PointCount="3" Stretch="Fill" Stroke="{DynamicResource AccentTextDark}" VerticalAlignment="Top" Width="5" RenderTransformOrigin="0.5,0.5">
    		<ed:RegularPolygon.RenderTransform>
    			<TransformGroup>
    				<ScaleTransform/>
    				<SkewTransform/>
    				<RotateTransform Angle="90"/>
    				<TranslateTransform/>
    			</TransformGroup>
    		</ed:RegularPolygon.RenderTransform>
    	</ed:RegularPolygon>
        <ed:RegularPolygon x:Name="triTaglist" Fill="{DynamicResource AccentTextDark}" HorizontalAlignment="Left" Height="2" InnerRadius="1" Margin="43,4.167,0,0" PointCount="3" Stretch="Fill" Stroke="{DynamicResource AccentTextDark}" VerticalAlignment="Top" Width="5" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
    		<ed:RegularPolygon.RenderTransform>
    			<TransformGroup>
    				<ScaleTransform/>
    				<SkewTransform/>
    				<RotateTransform Angle="90"/>
    				<TranslateTransform/>
    			</TransformGroup>
    		</ed:RegularPolygon.RenderTransform>
    	</ed:RegularPolygon>
        <ed:RegularPolygon x:Name="triAboutApp" Fill="{DynamicResource AccentTextDark}" HorizontalAlignment="Left" Height="2" InnerRadius="1" Margin="43,22.167,0,0" PointCount="3" Stretch="Fill" Stroke="{DynamicResource AccentTextDark}" VerticalAlignment="Top" Width="5" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <ed:RegularPolygon.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ed:RegularPolygon.RenderTransform>
        </ed:RegularPolygon>
    </Grid>
</UserControl>
